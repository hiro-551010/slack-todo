{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "indent": ["error", 2],
      "quotes": ["error", "double"],
      "prettier/prettier": "error"
    },
    "ignorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/"
    ]
}